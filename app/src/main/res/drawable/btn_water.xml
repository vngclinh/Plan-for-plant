<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">

    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#FF2BB5A3" />
                    <corners android:radius="32dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <gradient
                        android:startColor="#FF4FD4BE"
                        android:endColor="#FF24B399"
                        android:angle="0" />
                    <corners android:radius="32dp" />
                    <padding
                        android:left="8dp"
                        android:top="8dp"
                        android:right="8dp"
                        android:bottom="8dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
