<!-- res/drawable/bg_input.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền -->
    <solid android:color="@color/white"/>

    <!-- Bo góc -->
    <corners android:radius="12dp"/>

    <!-- Viền -->
    <stroke
        android:width="1dp"
        android:color="@color/green_light"/>

    <!-- Padding bên trong (tùy EditText có thể bỏ) -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp"/>
</shape>
