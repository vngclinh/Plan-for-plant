<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Vòng tròn ngoài -->
    <item
        android:width="120dp"
        android:height="120dp">
        <shape>
            <gradient
                android:startColor="#8028A0E0"
                android:endColor="#4024B399"
                android:angle="270" />
            <corners android:radius="60dp" />
        </shape>
    </item>

    <!-- Vòng tròn trong -->
    <item
        android:width="80dp"
        android:height="80dp"
        android:gravity="center">
        <shape>
            <gradient
                android:startColor="#CC4FD4BE"
                android:endColor="#CC28A0E0"
                android:angle="270" />
            <corners android:radius="40dp" />
        </shape>
    </item>

</layer-list>
