<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <!-- Thanh tiêu đề có nút quay lại -->
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        android:background="#B3E5FC"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Nút back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_arrow_back_ios_24"
            android:contentDescription="Quay lại"
            app:tint="@color/green_primary" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết ngày 23/09/2025"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Phần nội dung chính -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">

            <!-- Container hiển thị danh sách kế hoạch từ backend -->
            <LinearLayout
                android:id="@+id/layoutScheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp" />

            <!-- Card Thời tiết -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvWeatherEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="☀️"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvWeatherInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời tiết: Nắng nhẹ, 30°C"
                        android:textSize="16sp"
                        android:textColor="@color/sky_blue_dark"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Album ảnh -->
            <TextView
                android:id="@+id/tvAlbumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📷 Ảnh cây trong ngày"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/earth_brown_dark"
                android:layout_marginBottom="8dp"/>

            <HorizontalScrollView
                android:id="@+id/scrollAlbum"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/albumContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Demo ảnh -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/plant1"
                        android:background="@drawable/rounded_image_bg"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/plant2"
                        android:background="@drawable/rounded_image_bg"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Text khi không có ảnh -->
            <TextView
                android:id="@+id/tvNoPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có ảnh nào được lưu lại"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trang chủ -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/green_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Nhật ký -->
        <LinearLayout
            android:id="@+id/nav_diary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_journal"
                app:tint="@color/green_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhật ký"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Camera giữa -->
        <ImageView
            android:id="@+id/nav_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@drawable/bg_circle_green"
            android:padding="12dp"
            android:layout_marginHorizontal="12dp" />

        <!-- Chatbot -->
        <LinearLayout
            android:id="@+id/nav_chatbot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat"
                app:tint="@color/green_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chatbot"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Hồ sơ -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/green_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ sơ"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
