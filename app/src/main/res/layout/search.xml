<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#B3E5FC"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📍 Hà Nội"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#6D4C41" />

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☀️ 30°C"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />
    </LinearLayout>

    <!-- Search box -->
    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Hoa hồng"
        android:paddingStart="26dp"
        android:background="@drawable/bg_search"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:textColor="#333"
        android:textColorHint="#999"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp" />

    <!-- Kết quả tìm kiếm hiển thị ngay dưới grid -->
    <LinearLayout
        android:id="@+id/layoutSearchResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả tìm kiếm"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <!-- List demo -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Item mẫu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_local_florist"
                        android:contentDescription="ảnh kết quả" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoa hồng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4E342E"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <!-- Bạn có thể copy thêm nhiều item để demo -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
