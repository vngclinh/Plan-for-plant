<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige">

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:background="@color/sky_blue_light">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/outline_arrow_back_ios_24"
            android:padding="4dp"
            app:tint="@color/green_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Hồ sơ cá nhân"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/earth_brown_dark" />
    </LinearLayout>

    <!-- ===== CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- AVATAR + CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar"
                        app:strokeColor="@color/green_primary"
                        app:strokeWidth="3dp"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvFullname"
                        android:text="Nguyễn Văn A"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/earth_brown_dark"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvUsername"
                        android:text="nguyenvana"
                        android:textSize="15sp"
                        android:textColor="@color/green_medium"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_input"
                        android:padding="18dp">

                        <TextView
                            android:text="Email"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/earth_brown_dark"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:text="email@gmail.com"
                            android:textColor="@color/green_medium"
                            android:textSize="15sp"
                            android:layout_marginBottom="14dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="Số điện thoại"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/earth_brown_dark"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:id="@+id/tvPhone"
                            android:text="0123456789"
                            android:textColor="@color/green_medium"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="22dp"
                        android:text="Cập nhật thông tin"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        app:cornerRadius="26dp"
                        android:backgroundTint="@color/green_primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
