<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".ui.MainActivity">

    <!-- Thanh trên: vị trí + thời tiết -->
    <!-- Thanh trên: vị trí + thời tiết -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:background="#B3E5FC"
        android:gravity="center_vertical"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- City name -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📍 Hà Nội"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#6D4C41" />

        <!-- Weather icon -->
        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_sunny"
            android:contentDescription="Weather Icon" />

        <!-- Weather temperature -->
        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30°C"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32" />

    </LinearLayout>


    <!-- Search box -->
    <EditText
        android:id="@+id/search_box"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Tìm cây, hoa..."
        android:paddingStart="26dp"
        android:background="@drawable/bg_search"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:textColor="#333"
        android:textColorHint="#999"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Menu Buttons: Chụp cây, Chụp bệnh, Thêm vào vườn của tôi -->
    <LinearLayout
        android:id="@+id/menu_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/search_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Chụp cây với hình ảnh đại diện -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_capture_plant"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:icon="@drawable/ic_plant"
            android:iconPadding="16dp"
            android:iconGravity="textStart"
            android:text="Chụp cây"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/green_primary"
            android:strokeColor="@color/green_primary"
            android:strokeWidth="2dp"
            android:elevation="4dp"
            app:iconTint="@null"
            app:cornerRadius="40dp" />

        <!-- Chụp bệnh với hình ảnh đại diện -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_capture_disease"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:icon="@drawable/ic_disease"
            android:iconPadding="16dp"
            android:iconGravity="textStart"
            android:text="Chụp bệnh"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/earth_brown_dark"
            android:strokeColor="@color/earth_brown_dark"
            android:strokeWidth="2dp"
            android:elevation="4dp"
            app:iconTint="@null"
            app:cornerRadius="40dp" />

        <!-- Xem vườn cây của tôi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_my_garden"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:icon="@drawable/ic_add_garden"
            android:iconPadding="16dp"
            android:iconGravity="textStart"
            android:text="Xem vườn cây của tôi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/green_primary"
            android:strokeColor="@color/green_primary"
            android:strokeWidth="2dp"
            android:elevation="2dp"
            app:cornerRadius="32dp" />
    </LinearLayout>

    <!-- Danh sách Card -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/menu_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"/>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"/>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trang chủ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Nhật ký trồng cây -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhật ký"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Camera giữa -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@drawable/bg_circle_green"
            android:padding="12dp"
            android:layout_marginHorizontal="12dp" />

        <!-- Chatbot -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chatbot"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Hồ sơ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ sơ"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
