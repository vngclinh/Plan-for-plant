            android:layout_height="64dp"
            app:iconPadding="16dp"
            app:iconGravity="textStart"
            android:text="Xem vÆ°á»n cÃ¢y cá»§a tÃ´i"
            android:textSize="18sp"
            android:textStyle="bold"
