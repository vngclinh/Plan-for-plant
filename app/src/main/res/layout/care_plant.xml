<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <!-- Thanh tab -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tab_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lịch sử"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:background="@drawable/bg_tab_unselected" />

        <TextView
            android:id="@+id/tab_plan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kế hoạch"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_tab_selected" />
    </LinearLayout>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🌿 Lên kế hoạch chăm cây"
        android:textColor="@color/green_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lịch -->
    <androidx.cardview.widget.CardView
        android:id="@+id/calendarCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:dateTextAppearance="@style/TextAppearance.AppCompat.Body1"
            android:focusedMonthDateColor="@color/green_primary"
            android:unfocusedMonthDateColor="@color/text_secondary"
            android:weekSeparatorLineColor="@color/gray_light"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>


    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/calendarCard"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 Chọn cây trong vườn"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/earth_brown_dark"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerGarden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Thời gian -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🕒 Chọn giờ thực hiện"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/earth_brown_dark"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/timePickerAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center"
                android:text="Chọn giờ thực hiện"
                android:textColor="@color/green_primary"
                android:background="@drawable/bg_card"
                android:textSize="16sp"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- HOẠT ĐỘNG -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📋 Hoạt động chăm cây"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/earth_brown_dark"
                android:layout_marginBottom="8dp" />

            <!-- TƯỚI NƯỚC -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutWateringInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cbWatering"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💧 Tưới nước"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etWaterDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập lượng nước tưới (ml)"
                        android:inputType="number"
                        android:background="@drawable/bg_input"
                        android:padding="8dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- BÓN PHÂN -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutFertilizingInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cbFertilizing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌱 Phân bón"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etFertilizerType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Loại phân bón"
                        android:background="@drawable/bg_input"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/etFertilizerAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lượng phân bón (g)"
                        android:inputType="number"
                        android:background="@drawable/bg_input"
                        android:padding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- TỈA LÁ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutPruningInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cbPruning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✂️ Ghi chú tỉa lá"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etPruningNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập mô tả công việc tỉa lá"
                        android:background="@drawable/bg_input"
                        android:padding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Trạng thái -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📌 Trạng thái"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/earth_brown_dark"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerCompletion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Ghi chú -->
            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú thêm (tùy chọn)"
                android:background="@drawable/bg_input"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Nút tạo kế hoạch -->
            <Button
                android:id="@+id/btnCreatePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo kế hoạch chăm cây 🌿"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_primary"
                android:layout_marginBottom="16dp" />

            <!-- nút quay về -->
            <Button
                android:id="@+id/btnBackHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏠 Quay về trang chủ"
                android:backgroundTint="@color/gray_light"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng -->
    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trang chủ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Nhật ký trồng cây -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhật ký"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Camera giữa -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@drawable/bg_circle_green"
            android:padding="12dp"
            android:layout_marginHorizontal="12dp" />

        <!-- Chatbot -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chatbot"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>

        <!-- Hồ sơ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ sơ"
                android:textSize="10sp"
                android:textColor="@color/green_primary" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
