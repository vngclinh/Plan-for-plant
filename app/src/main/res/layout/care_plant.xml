<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tab_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lịch sử"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tab_plan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kế hoạch"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xây dựng kế hoạch chăm cây"
                android:textColor="@color/green_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TimePicker
                android:id="@+id/timePickerAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/radioActivityGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbWatering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💧 Tưới nước"/>
                <RadioButton
                    android:id="@+id/rbFertilizing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌿 Bón phân"/>
                <RadioButton
                    android:id="@+id/rbPruning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✂️ Tỉa lá"/>
            </RadioGroup>

            <!-- Input cho Tưới nước -->
            <LinearLayout
                android:id="@+id/layoutWateringInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">
                <EditText
                    android:id="@+id/etWaterAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lượng nước tưới (ml)"
                    android:inputType="number"/>
            </LinearLayout>

            <!-- Input cho Bón phân -->
            <LinearLayout
                android:id="@+id/layoutFertilizingInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <EditText
                    android:id="@+id/etFertilizerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Loại phân bón"/>
                <EditText
                    android:id="@+id/etFertilizerAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lượng phân bón (g)"
                    android:inputType="number"/>
            </LinearLayout>

            <!-- Input cho Tỉa lá -->
            <LinearLayout
                android:id="@+id/layoutPruningInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <EditText
                    android:id="@+id/etPruningNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ghi chú tỉa lá"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú thêm (tùy chọn)"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnCreatePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo kế hoạch"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
