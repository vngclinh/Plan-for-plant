<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_plant"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_plant"
        android:background="@drawable/rounded_image_bg"
        android:contentDescription="Ảnh cây" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tv_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoa dâm bụt"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#388E3C" />

        <TextView
            android:id="@+id/tv_plant_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày thêm: 01/10/2025"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tv_plant_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đang phát triển tốt"
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>

