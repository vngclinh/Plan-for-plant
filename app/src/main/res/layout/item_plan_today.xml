<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="0dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:clipToPadding="false"
    app:strokeWidth="1dp"
    app:strokeColor="#D0EAD3"
    android:foreground="?attr/selectableItemBackground">

    <!-- LỚP NỀN GRADIENT WOW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_plan_ultra_wow"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- BADGE GIỜ -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:gravity="center"
            android:background="@drawable/bg_badge_time"
            android:layout_marginBottom="12dp"
            android:elevation="6dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_time"
                app:tint="#4E6F52" />

            <TextView
                android:id="@+id/tvPlanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:textColor="#3C463B"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- TITLE WOW -->
        <TextView
            android:id="@+id/tvPlanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tưới cây (Monstera)"
            android:layout_marginTop="4dp"
            android:textColor="#2E3830"
            android:textStyle="bold"
            android:textSize="19sp"
            android:gravity="center"/>

        <!-- NOTE WOW -->
        <TextView
            android:id="@+id/tvPlanNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ghi chú: Tưới nước nhẹ"
            android:textColor="#6A5F58"
            android:textSize="15sp"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:visibility="gone"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
