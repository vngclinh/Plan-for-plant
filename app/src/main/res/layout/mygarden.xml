<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">


    <!-- Tiêu đề nổi bật -->
    <LinearLayout
        android:id="@+id/header_garden"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/bg_header_rounded"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_garden_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vườn cây của tôi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary"
            android:fontFamily="@font/poppins_semibold" />
    </LinearLayout>


    <!-- Nút thêm cây nổi bật -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thêm cây vô vườn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/green_primary"
        android:icon="@drawable/ic_add"
        android:iconTint="@color/white"
        android:iconSize="28dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:iconGravity="textStart"
        app:cornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@id/header_garden"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- CardView đẹp hơn -->
    <androidx.cardview.widget.CardView
        android:id="@+id/garden_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_add_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <!-- Cây 1: Hoa dâm bụt -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_item_plant_selector"
                android:layout_marginBottom="8dp">


                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded_image_bg"
                    android:contentDescription="Ảnh cây"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_plant"
                    android:elevation="2dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoa dâm bụt"
                        android:textColor="#388E3C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Ngày thêm: 01/10/2025"
                        android:textColor="#757575"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Trạng thái: Đang phát triển tốt"
                        android:textColor="#388E3C"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_edit_plant1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert"
                    android:contentDescription="Chỉnh sửa cây"
                    android:tint="#757575"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <!-- Cây 2: Ráy lá xẻ (Monstera deliciosa) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_item_plant_selector"
                android:layout_marginBottom="8dp">


                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded_image_bg"
                    android:contentDescription="Ảnh cây"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_plant"
                    android:elevation="2dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ráy lá xẻ (Monstera)"
                        android:textColor="#388E3C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Ngày thêm: 01/10/2025"
                        android:textColor="#757575"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Trạng thái: Đang phát triển tốt"
                        android:textColor="#388E3C"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_edit_plant2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert"
                    android:contentDescription="Chỉnh sửa cây"
                    android:tint="#757575"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <!-- Cây 3: Vạn niên thanh -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_item_plant_selector">


                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_plant"
                    android:background="@drawable/rounded_image_bg"
                    android:contentDescription="Ảnh cây"
                    android:elevation="2dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vạn niên thanh"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#388E3C"
                        android:fontFamily="@font/poppins_semibold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày thêm: 27/09/2025"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="2dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái: Đang phát triển tốt"
                        android:textSize="14sp"
                        android:textColor="#388E3C"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_edit_plant3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert"
                    android:contentDescription="Chỉnh sửa cây"
                    android:tint="#757575"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Thêm FrameLayout để chứa fragment -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_garden"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trang chủ -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="#2E7D32" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trang chủ"
                    android:textSize="10sp"
                    android:textColor="@color/green_primary" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_nav_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text=""
                android:contentDescription="Trang chủ" />
        </FrameLayout>


        <!-- Nhật ký trồng cây -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_book"
                    app:tint="#2E7D32" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhật ký"
                    android:textSize="10sp"
                    android:textColor="@color/green_primary" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_nav_journal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text=""
                android:contentDescription="Nhật ký" />
        </FrameLayout>


        <!-- Camera giữa -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">


                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="@drawable/bg_circle_green"
                    android:padding="12dp"
                    android:layout_marginHorizontal="12dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_nav_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text=""
                android:contentDescription="Camera" />
        </FrameLayout>


        <!-- Chatbot -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chat"
                    app:tint="#2E7D32" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chatbot"
                    android:textSize="10sp"
                    android:textColor="@color/green_primary" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_nav_chatbot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text=""
                android:contentDescription="Chatbot" />
        </FrameLayout>


        <!-- Hồ sơ -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    app:tint="#2E7D32" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ sơ"
                    android:textSize="10sp"
                    android:textColor="@color/green_primary" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_nav_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text=""
                android:contentDescription="Hồ sơ" />
        </FrameLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
