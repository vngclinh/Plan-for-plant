<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- Card bao ảnh -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardThumb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/darker_gray">

        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </com.google.android.material.card.MaterialCardView>

        <!-- Scrim khi chọn -->
    <View
    android:id="@+id/viewScrim"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="@id/cardThumb"
    app:layout_constraintBottom_toBottomOf="@id/cardThumb"
    app:layout_constraintStart_toStartOf="@id/cardThumb"
    app:layout_constraintEnd_toEndOf="@id/cardThumb"
    android:background="#55000000"
    android:visibility="gone"/>

        <!-- Tick chọn -->
    <ImageView
    android:id="@+id/imgChecked"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_margin="8dp"
    app:layout_constraintTop_toTopOf="@id/cardThumb"
    app:layout_constraintEnd_toEndOf="@id/cardThumb"
    app:srcCompat="@drawable/ic_check_circle_24"
    android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
