<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige">

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:background="@color/sky_blue_light">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/outline_arrow_back_ios_24"
            android:padding="4dp"
            app:tint="@color/green_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Đổi mật khẩu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/earth_brown_dark" />
    </LinearLayout>

    <!-- ===== CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvTitleEditPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đổi mật khẩu"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/earth_brown_dark"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="16dp"/>

                    <!-- CURRENT PASSWORD -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/password"/>

                        <EditText
                            android:id="@+id/etCurrentPassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:hint="Mật khẩu hiện tại"
                            android:inputType="textPassword"
                            android:textColor="@color/earth_brown_dark"
                            android:textColorHint="@color/green_medium"/>
                    </LinearLayout>

                    <!-- NEW PASSWORD -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/password1"/>

                        <EditText
                            android:id="@+id/etNewPassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:hint="Mật khẩu mới"
                            android:inputType="textPassword"
                            android:textColor="@color/earth_brown_dark"
                            android:textColorHint="@color/green_medium"/>
                    </LinearLayout>

                    <!-- CONFIRM PASSWORD -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_input"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/password2"/>

                        <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:hint="Nhập lại mật khẩu mới"
                            android:inputType="textPassword"
                            android:textColor="@color/earth_brown_dark"
                            android:textColorHint="@color/green_medium"/>
                    </LinearLayout>

                    <!-- BUTTON -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Đổi mật khẩu"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="26dp"
                        android:layout_marginTop="28dp"
                        android:backgroundTint="@color/green_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
